@model IEnumerable<IAtaskTest.Models.product>

@{
    ViewBag.Title = "HomePage";
}

<h2>HomePage</h2>

<p>
    <a href="@Url.Action("Create", "products")" class="btn btn-primary" target="_blank">
        <span class="glyphicon glyphicon-plus"></span>
        New Product
    </a>
</p>

<p>
    @using (@Html.BeginForm())
    {
        @Html.TextBox("search") <input type="submit" value="search" />
    }
</p>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content(item.Image)" alt="..." width="200" height="200">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>...</p>
                    <p><a href="@Url.Action("Details", "products", new { id = item.Id})" class="btn btn-primary" role="button">More Info</a> </p>
                </div>
            </div>
        </div>

    }
</div>

